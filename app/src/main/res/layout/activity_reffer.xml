<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/colorAccent2"
        android:layout_height="match_parent">

        <abcdjob.workonline.com.qrcode.helpers.widget.Basestatusbar
            android:id="@+id/status_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/gradient_title_bar_primary_color_and_accent_color"
            app:layout_constraintBottom_toTopOf="@+id/tab1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_height"
            android:layout_below="@id/status_bar"
            android:background="@drawable/gradient_title_bar_primary_color_and_accent_color"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:contentInsetStartWithNavigation="@dimen/margin_0"
            app:layout_constraintBottom_toTopOf="@+id/text_view_play_sound"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_bar"
            app:title="Refer &amp; Earn"
            tools:ignore="DuplicateIds,UnknownIdInLayout" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="607dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/toolbar"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            tools:ignore="MissingConstraints">


            <ImageView
                android:id="@+id/refersc"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:layout_above="@id/referTv"
                android:layout_below="@id/toolbar"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/marketing" />

            <ScrollView
                android:id="@+id/scrl"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/transparent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/refernow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/refersc"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="2dp"
                        android:text="Refer Now"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/R" />


                    <TextView
                        android:id="@+id/refercontent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/refernow"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:text="@string/refercontent"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/R" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/refernow"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/refercontent2"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/refernow"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:text="Invite Now"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/red"
                        android:textColorHighlight="@color/red"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/referwatsbtn"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_gravity="bottom"
                            android:layout_margin="2dp"
                            android:background="@drawable/whats_app"
                            android:foregroundGravity="center_horizontal" />

                        <ImageButton
                            android:id="@+id/refertgbtn"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_gravity="bottom"
                            android:layout_margin="2dp"
                            android:background="@drawable/telegramic"
                            android:foregroundGravity="center_horizontal" />

                        <ImageButton
                            android:id="@+id/referbtnmore"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_gravity="bottom"
                            android:layout_margin="2dp"
                            android:background="@drawable/more"
                            android:foregroundGravity="center_horizontal" />

                        <ImageButton
                            android:id="@+id/referfbtn"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_gravity="bottom"
                            android:layout_margin="2dp"
                            android:background="@drawable/facebook"
                            android:foregroundGravity="center_horizontal" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/refernow"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="3dp"
                        android:paddingBottom="5dp"
                        android:text="Join Us"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="@color/red"
                        android:textColorHighlight="@color/red"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/referybtn"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_gravity="bottom"
                            android:layout_margin="2dp"
                            android:background="@drawable/youtube_ic_pro"
                            android:foregroundGravity="center_horizontal" />

                        <ImageButton
                            android:id="@+id/referfbtn2"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_gravity="bottom"
                            android:layout_margin="2dp"
                            android:background="@drawable/facebook"
                            android:foregroundGravity="center_horizontal" />

                        <ImageButton
                            android:id="@+id/refertgbtn2"
                            android:layout_width="58dp"
                            android:layout_height="58dp"
                            android:layout_gravity="bottom"
                            android:layout_margin="2dp"
                            android:background="@drawable/telegramic"
                            android:foregroundGravity="center_horizontal" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/adView"
                        android:background="@color/colorAccent2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/referTv"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/refernow"
                            android:layout_gravity="center_horizontal"
                            android:paddingTop="@dimen/_5sdp"
                            android:text="Your Refer Code"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/R"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/referTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="10dp"
                            android:background="@drawable/btn"
                            android:backgroundTint="#EFF4F4"
                            android:minWidth="160dp"
                            android:text="Dar"
                            android:textColor="@color/R"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/shareBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="10dp"
                            android:background="@drawable/btn"
                            android:backgroundTint="#E91E63"
                            android:minWidth="160dp"
                            android:text="Share"
                            android:textColor="#fff"
                            android:textStyle="bold" />


                    </LinearLayout>


                </LinearLayout>


            </ScrollView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>


